   <children>
      <ImageView fitHeight="768.0" fitWidth="1152.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Assets/image_from_game_background.jpg" />
         </image>
      </ImageView>
      <Button fx:id="startGameButton" layoutX="433.0" layoutY="231.0" mnemonicParsing="false" prefHeight="82.0" prefWidth="286.0" style="-fx-background-color: #bf9b28; -fx-background-radius: 10;" text="Start game">
         <font>
            <Font name="Jokerman" size="36.0" />
         </font>
         <tooltip>
            <Tooltip text="Начать игру">
               <font>
                  <Font name="Gabriola" size="18.0" />
               </font>
            </Tooltip>
         </tooltip>
      </Button>
      <Button fx:id="rulesButton" layoutX="433.0" layoutY="343.0" mnemonicParsing="false" prefHeight="82.0" prefWidth="285.0" style="-fx-background-color: #bf9b28; -fx-background-radius: 10;" text="Rules">
         <font>
            <Font name="Jokerman" size="36.0" />
         </font>
         <tooltip>
            <Tooltip text="Прочитать правила игры">
               <font>
                  <Font name="Gabriola" size="18.0" />
               </font>
            </Tooltip>
         </tooltip>
      </Button>
      <Button fx:id="outTheGameButton" layoutX="433.0" layoutY="455.0" mnemonicParsing="false" prefHeight="82.0" prefWidth="285.0" style="-fx-background-color: #bf9b28; -fx-background-radius: 10;" text="Out the game">
         <font>
            <Font name="Jokerman" size="36.0" />
         </font>
         <tooltip>
            <Tooltip text="Сменить аккаунт">
               <font>
                  <Font name="Gabriola" size="18.0" />
               </font>
            </Tooltip>
         </tooltip>
      </Button>
      <Label layoutX="5.0" layoutY="745.0" text="Version 1.0" textFill="#848383" />
      <Label layoutX="5.0" layoutY="724.0" text="Created by Alexandr" textFill="#848383" />
   </children>
</AnchorPane>
